{
  "expo": {
    "name": "AirMetrics",
    "slug": "airmetrics",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/AirMetrics icon.jpg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/AirMetrics icon.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A8A"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "O AirMetrics precisa acessar sua localização para fornecer dados de qualidade do ar específicos da sua região.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "O AirMetrics precisa acessar sua localização para fornecer dados de qualidade do ar específicos da sua região."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/AirMetrics icon.jpg",
        "backgroundColor": "#1E3A8A"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/AirMetrics icon.jpg"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que o AirMetrics use sua localização para fornecer dados precisos de qualidade do ar."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-AirMetrics icon.jpg",
          "color": "#4CAF50",
          "sounds": ["./assets/notification.wav"]
        }
      ]
    ]
  }
}
